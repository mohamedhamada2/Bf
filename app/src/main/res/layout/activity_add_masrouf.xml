<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="addmasroufviewmodel"
            type="com.mz.bf.add_masrouf.AddMasroufViewModel" />
    </data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".add_masrouf.AddMasroufActivity"
        android:orientation="vertical"
        android:background="@drawable/bf_cover">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/purple_500">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/cairo_bold"
                android:text="إضافة سند"
                android:textColor="@color/white"
                android:textSize="@dimen/_16ssp" />
            <ImageView
                android:id="@+id/back_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_chevron"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/et_bill_date"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/txt_login_background"
                    android:elevation="@dimen/_5sdp"
                    android:clickable="true"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="تاريخ الصرف"
                    android:inputType="text"
                    android:textColorHint="@color/purple_500"
                    android:fontFamily="@font/cairo_semibold"
                    android:textSize="@dimen/_13ssp"
                    android:padding="@dimen/_5sdp" />
                <Spinner
                    android:id="@+id/spinner_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_13ssp"
                    android:fontFamily="@font/cairo_semibold"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="#dddddd"
                    android:hint="زمن العرض"
                    android:paddingRight="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/spinner_item_bg"
                    android:elevation="@dimen/_2sdp"/>
                <EditText
                    android:id="@+id/et_value"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/txt_login_background"
                    android:elevation="@dimen/_5sdp"
                    android:hint="القيمة"
                    android:inputType="text"
                    android:textColorHint="@color/purple_500"
                    android:fontFamily="@font/cairo_semibold"
                    android:textSize="@dimen/_13ssp"
                    android:padding="@dimen/_5sdp" />
                <Button
                    android:id="@+id/btn_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_login_background"
                    android:text="إضافة"
                    android:fontFamily="@font/cairo_bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp"
                    android:layout_margin="@dimen/_10sdp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>