<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="printsandviewmodel"
            type="com.mz.bf.uis.activity_print_bill.PrintSandViewModel" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".uis.activity_print_bill.PrintSandActivity">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollViewBluetooth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fillViewport="true"
            android:scrollbars="none"
            android:background="#fafafa">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".uis.activity_print_bill.PrintBillActivity"
                android:orientation="vertical"
                android:gravity="right"
                android:background="@color/white">
                <ImageView
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/logo2"
                    android:layout_marginRight="@dimen/_100sdp"/>
                <TextView
                    android:id="@+id/txt_sand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="سند قبض"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/cairo_bold"
                    android:layout_marginTop="@dimen/_3sdp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="right">
                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text="المندوب"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/cairo_semibold"/>
                    <TextView
                        android:id="@+id/txt_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/user_name"
                        android:textSize="@dimen/_12ssp"
                        android:text="135669"
                        android:fontFamily="@font/cairo_semibold"
                        android:textColor="@color/purple_500"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_alignParentTop="true"/>
                </RelativeLayout>
                <androidx.cardview.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_gravity="center_horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/txt_login">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp">
                            <TextView
                                android:id="@+id/sand_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cairoregular"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                android:text="رقم السند :"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_centerVertical="true"/>
                            <TextView
                                android:id="@+id/txt_sand_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cairoregular"
                                android:textColor="@color/purple_500"
                                android:textSize="@dimen/_12ssp"
                                android:text="تاريخ المعالجة:"
                                android:layout_toLeftOf="@+id/sand_num"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_centerVertical="true"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp">

                            <TextView
                                android:id="@+id/product_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:fontFamily="@font/cairoregular"
                                android:text="تاريخ السند:"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp" />

                            <TextView
                                android:id="@+id/txt_sand_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_toLeftOf="@+id/product_price"
                                android:fontFamily="@font/cairoregular"
                                android:text="تاريخ المعالجة:"
                                android:textColor="@color/purple_500"
                                android:textSize="@dimen/_12ssp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp">
                            <TextView
                                android:id="@+id/product_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cairoregular"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                android:text="اسم العميل:"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_centerVertical="true"/>
                            <TextView
                                android:id="@+id/txt_client_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cairoregular"
                                android:textColor="@color/purple_500"
                                android:textSize="@dimen/_12ssp"
                                android:text="الدرجة:"
                                android:layout_toLeftOf="@+id/product_amount"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_centerVertical="true"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp">
                            <TextView
                                android:id="@+id/total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:fontFamily="@font/cairoregular"
                                android:text="المبلغ:"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp" />
                            <TextView
                                android:id="@+id/txt_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cairoregular"
                                android:textColor="@color/purple_500"
                                android:textSize="@dimen/_12ssp"
                                android:text="الدرجة:"
                                android:layout_toLeftOf="@+id/total"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_centerVertical="true"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp">
                            <TextView
                                android:id="@+id/client_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:text="رقم الشكاوي"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                android:fontFamily="@font/cairoregular"/>
                            <TextView
                                android:id="@+id/txt_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@+id/client_name"
                                android:textSize="@dimen/_12ssp"
                                android:text="01063082178"
                                android:textColor="@color/purple_500"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_alignParentTop="true"
                                android:fontFamily="@font/cairoregular"/>
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <Button
            android:id="@+id/btnPrint"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp"
            android:text="طباعة"
            android:fontFamily="@font/cairo_bold"
            android:layout_marginTop="@dimen/_30sdp"/>
    </LinearLayout>
</layout>
