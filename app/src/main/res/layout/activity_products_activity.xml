<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="productsviewmodel"
            type="com.mz.bf.products.ProductViewModel" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".products.ProductsActivityActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/purple_500">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_bold"
                android:text="المخزون"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/white"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/back_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_chevron"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_below="@+id/cancel_img">
            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_7sdp"
                android:background="@drawable/txt_login_background2"
                android:elevation="@dimen/_2sdp"
                android:layout_margin="@dimen/_10sdp"
                android:fontFamily="@font/cairo_semibold"
                android:hint="ابحث عن منتج بالإسم أو الكود"
                android:drawableRight="@drawable/ic_baseline_search_24"
                android:gravity="center"
                android:layout_toRightOf="@+id/card_view"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                app:cardElevation="@dimen/_2sdp"
                android:background="@drawable/btn_login_background"
                android:text="بحث"
                android:textColor="@color/white"
                android:fontFamily="@font/cairo_bold"
                android:textSize="@dimen/_13sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                app:cardBackgroundColor="@color/purple_500"
                android:layout_marginLeft="@dimen/_5sdp">
                <ImageView
                    android:id="@+id/btn_search"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_baseline_search_white"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_sands"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"/>
    </LinearLayout>
</layout>