<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_3sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_margin="@dimen/_5sdp">
        <TextView
            android:id="@+id/txt_client_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_500"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/cairo_bold"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="محمد حمادة محمد احمد"/>
        <TextView
            android:id="@+id/txt_client_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_500"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/cairo_bold"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="محمد حمادة محمد احمد"
            android:layout_marginTop="@dimen/_5sdp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_see"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/txt_login_background2"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_5sdp"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/black"
                android:text="عرض الموقع"
                android:fontFamily="@font/cairo_bold"
                android:paddingRight="@dimen/_5sdp"
                android:paddingLeft="@dimen/_5sdp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_login_background"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/btn_see"
                android:layout_marginRight="@dimen/_5sdp"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/white"
                android:text="تعديل الموقع"
                android:fontFamily="@font/cairo_bold"
                android:paddingRight="@dimen/_5sdp"
                android:paddingLeft="@dimen/_5sdp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/whatsapp_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_update_background"
                android:layout_toLeftOf="@+id/btn_update"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:text="مشاركة الموقع"
                android:fontFamily="@font/cairo_bold"
                android:textColor="@color/white"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"/>
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>