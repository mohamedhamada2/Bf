<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardBackgroundColor="@color/purple_700"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginLeft="@dimen/_10sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/cancel_img"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:background="@drawable/ic_baseline_cancel_24"
            android:layout_margin="@dimen/_5sdp"
           android:layout_gravity="right"/>
        <EditText
            android:id="@+id/et_product_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/txt_login_background"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:elevation="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:hint="إسم المنتج"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/purple_500"
            android:textColorHint="@color/purple_500"
            android:gravity="center_vertical"
            android:fontFamily="@font/cairo_semibold"
            android:padding="@dimen/_3sdp"
            android:clickable="true"
            android:editable="false"
            android:focusable="false" />
        <EditText
            android:id="@+id/type_spinner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/txt_login_background"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:elevation="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/purple_500"
            android:textColorHint="@color/purple_500"
            android:gravity="center_vertical"
            android:fontFamily="@font/cairo_semibold"
            android:padding="@dimen/_3sdp"
            android:clickable="true"
            android:editable="false"
            android:focusable="false"/>
        <EditText
            android:id="@+id/et_product_price"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/txt_login_background"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:elevation="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:hint="سعر المنتج"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/purple_500"
            android:textColorHint="@color/purple_500"
            android:gravity="center_vertical"
            android:fontFamily="@font/cairo_semibold"
            android:padding="@dimen/_3sdp"
            android:clickable="false"
            android:editable="false"
            android:focusable="false"
            android:inputType="numberDecimal"/>
        <EditText
            android:id="@+id/et_product_amout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/txt_login_background"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:elevation="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:hint="الكمية"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/purple_500"
            android:textColorHint="@color/purple_500"
            android:gravity="center_vertical"
            android:fontFamily="@font/cairo_semibold"
            android:padding="@dimen/_3sdp"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/et_total_price"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/txt_login_background"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:elevation="@dimen/_5sdp"
            android:hint="السعر الإجمالي"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/purple_500"
            android:textColorHint="@color/purple_500"
            android:gravity="center_vertical"
            android:fontFamily="@font/cairo_semibold"
            android:padding="@dimen/_3sdp"
            android:inputType="numberDecimal"
            android:clickable="false"
            android:focusable="false"
            android:editable="false"
            android:enabled="false"/>
        <Button
            android:id="@+id/btn_add_bill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@drawable/btn_login_background"
            android:text="تعديل"
            android:fontFamily="@font/cairo_bold"
            android:textSize="@dimen/_15ssp"
            android:layout_margin="@dimen/_10sdp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>